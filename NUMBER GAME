import java.util.Scanner;
import java.util.Random;
class Main{
public static void main(String[]args){
Scanner scan=new Scanner(System.in);
Random random=new Random();
int secretNumber=random.nextInt(100);
int maxattempts=5;
int guess;
int attempts=0;
System.out.println("Guess the number(1-100)!You have 5 attempts!");
while(attempts=maxattempts)
{
System.out.println("Attempt "+(attempts+1)+" Enter your guess:");
guess=scan.nextInt();
attempts++;
if(guess==secretNumber)
{
System.out.println("You guessed it right in"+attempts+"Attempts!");
}
else if(guess<secretNumber)
{
System.out.println("Too High!");
}
else
{
System.out.println("Too Low");
}
if(attempts==maxattempts)
{
System.out.println("You have used all the 5 attempts!");
System.out.println("The secret Number is "+secretNumber);
}
}
scan.close();
}
